{
  "name": "incident-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/event-broker": "^0.2.0",
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4",
    "@sap-cloud-sdk/util": "^4",
    "@sap/ams": "^3",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "latest",
    "@cap-js/sqlite": "^2",
    "@sap/ams-dev": "latest",
    "@sap/ux-specification": "^1.124.8",
    "axios": "^1.7.9",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "chai-subset": "^1.6.0",
    "jest": "^29.7.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-incidents": "cds watch --open incidents/webapp/index.html?sap-ui-xx-viewCache=false",
    "test": "jest tests/test.js"
  },
  "cds": {
    "log": {
      "levels": {
        "remote": "debug",
        "messaging": "debug"
      }
    },
    "requires": {
      "ias": {
        "vcap": {
          "label": "identity"
        }
      },
      "messaging": {
        "kind": "local-messaging",
        "[production]": {
          "kind": "event-broker"
        }
      },
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "alice": {
              "policies": [
                "cap.support"
              ]
            },
            "bob": {
              "roles": [
                "support"
              ]
            }
          }
        }
      },
      "[production]": {
        "auth": {
          "kind": "ias"
        },
        "db": "hana"
      },
      "html5-repo": true,
      "destinations": true,
      "workzone": true,
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "[production]": {
          "credentials": {
            "destination": "incident-management-s4-hana-cloud",
            "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER"
          },
          "destinationOptions": {
            "iasToXsuaaTokenExchange": false
          }
        }
      },
      "html5-runtime": true
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "sapux": [
    "app/incidents"
  ]
}
